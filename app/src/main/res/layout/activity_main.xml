<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="683dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <Button
        android:id="@+id/bshave"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="shave"
        android:text="="
        app:layout_constraintBottom_toTopOf="@+id/bnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bnumber"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bgatol"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:text="<"
        android:onClick="gadol"
        app:layout_constraintBottom_toTopOf="@+id/bnumber"
        app:layout_constraintEnd_toStartOf="@+id/bshave"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bkatan"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="katan"
        android:text=">"
        app:layout_constraintBottom_toTopOf="@+id/bnumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/bshave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/bnumber"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="PressForNum"
        android:text="Press for number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.787" />

    <Button
        android:id="@+id/bclear"
        android:layout_width="91dp"
        android:layout_height="77dp"
        android:layout_weight="1"
        android:onClick="clear"
        android:text="clear"
        app:layout_constraintBottom_toTopOf="@+id/bshave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="106dp"
        android:layout_height="94dp"
        app:layout_constraintBottom_toTopOf="@+id/bgatol"
        app:layout_constraintEnd_toStartOf="@+id/t2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.649" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="99dp"
        android:layout_height="93dp"
        app:layout_constraintBottom_toTopOf="@+id/bkatan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/t1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.646" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="87dp"
        android:layout_height="44dp"
        android:text="True/False"
        app:layout_constraintBottom_toTopOf="@+id/t2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tahoz"
        app:layout_constraintVertical_bias="0.127" />

    <TextView
        android:id="@+id/tahoz"
        android:layout_width="89dp"
        android:layout_height="53dp"
        android:text="0%"
        app:layout_constraintBottom_toTopOf="@+id/t3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bclear" />

</androidx.constraintlayout.widget.ConstraintLayout>